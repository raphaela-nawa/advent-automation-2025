# Database Configuration
DAY06_DB_PATH=day06/data/day06_saas_metrics.db
DAY06_DB_PATH_ABSOLUTE=/Users/your-username/advent-automation-2025/day06/data/day06_saas_metrics.db

# Data Generation Parameters
DAY06_NUM_CUSTOMERS=500
DAY06_NUM_MONTHS=24
DAY06_START_DATE=2023-01-01
DAY06_END_DATE=2024-12-31
DAY06_RANDOM_SEED=42

# SaaS Metrics Configuration
DAY06_MONTHLY_CHURN_RATE=0.06
DAY06_UPGRADE_PROBABILITY=0.18
DAY06_DOWNGRADE_PROBABILITY=0.08
DAY06_DEFAULT_CAC=500.0

# Plan Tier Pricing (format: tier=min,max)
DAY06_STARTER_PRICING=29,99
DAY06_PRO_PRICING=199,499
DAY06_ENTERPRISE_PRICING=999,2999

# Dashboard Integration (Day 19)
DAY06_DASHBOARD_ENABLED=true
DAY06_DASHBOARD_URL=http://localhost:8050/day19/saas-health
DAY06_DASHBOARD_AUTO_REFRESH_SECONDS=300

# Output Preferences
DAY06_OUTPUT_FORMAT=sqlite
DAY06_EXPORT_CSV=false
DAY06_CSV_OUTPUT_DIR=day06/exports

# Logging
DAY06_LOG_LEVEL=INFO
DAY06_LOG_FILE=day06/logs/saas_metrics.log

# ============================================================================
# Optional: Looker Studio / BI Tool Integration
# ============================================================================

# If connecting to Looker Studio (future enhancement)
# DAY06_LOOKER_STUDIO_CONNECTOR_ID=your-connector-id
# DAY06_LOOKER_STUDIO_REPORT_URL=https://lookerstudio.google.com/reporting/your-report-id

# If exporting to cloud storage (future enhancement)
# DAY06_CLOUD_STORAGE_BUCKET=your-gcs-bucket
# DAY06_CLOUD_STORAGE_PATH=saas-metrics/day06/

# ============================================================================
# Development/Testing Flags
# ============================================================================

DAY06_DEBUG_MODE=false
DAY06_VERBOSE_OUTPUT=false
DAY06_ENABLE_DATA_VALIDATION=true
