# Day 13 Alert Triage - Environment Example

# Gmail API (for production use; sample file used locally)
DAY13_GMAIL_USER=gmail_user@example.com
DAY13_GMAIL_TOKEN_PATH=/path/to/token.json
DAY13_GMAIL_SAMPLE_PATH=day13/data/day13_mock_emails.json

# CSV drop folder (local synthetic data by default)
DAY13_CSV_DROP_FOLDER=day13/data

# Routing destinations
DAY13_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
DAY13_EMAIL_RECIPIENTS=alerts@example.com,compliance@example.com

# SMTP (optional if only Slack is used)
DAY13_SMTP_HOST=smtp.gmail.com
DAY13_SMTP_PORT=587
DAY13_SMTP_USER=alerts@example.com
DAY13_SMTP_PASSWORD=changeme

# Storage and deduplication
DAY13_AUDIT_DB_PATH=day13/data/day13_audit_log.db
DAY13_DEDUP_WINDOW_MINUTES=1440  # 24h

# Routing matrix overrides (comma-separated destinations)
DAY13_ROUTING_CRITICAL=slack:compliance-critical,email:compliance-leads
DAY13_ROUTING_HIGH=slack:compliance-high,email:compliance
DAY13_ROUTING_MEDIUM=slack:compliance-info
DAY13_ROUTING_LOW=email:archive

# Scheduler / Prefect
DAY13_PREFECT_WORK_POOL=advent-alerts-pool

# Execution mode
DAY13_DRY_RUN=true
